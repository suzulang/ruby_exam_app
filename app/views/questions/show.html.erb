<div class="container mt-4">
  <h1 class="mb-4"><%= @question.content %></h1>

  <% if @question.code.present? %>
    <pre><code class="ruby"><%= @question.code %></code></pre>
  <% end %>

  <h2 class="mt-4">选项：</h2>
  <div class="options">
    <% @question.options.each do |option| %>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="question_<%= @question.id %>" id="option_<%= option.id %>" value="<%= option.label %>">
        <label class="form-check-label" for="option_<%= option.id %>">
          <%= option.label %>: <%= option.content %>
        </label>
      </div>
    <% end %>
  </div>

  <p class="mt-4"><strong>正确答案：</strong> <%= @question.correct_answer %></p>

  <% if @question.explanation.present? %>
    <h2 class="mt-4">解释：</h2>
    <p><%= @question.explanation %></p>
  <% end %>

  <%= link_to '返回问题列表', questions_path, class: 'btn btn-primary mt-4' %>
</div>